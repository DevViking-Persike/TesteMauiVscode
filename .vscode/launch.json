{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Web (Chrome)",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "build-web",
            "url": "http://localhost:5214",
            "webRoot": "${workspaceFolder}/MauiTeste.Web/wwwroot",
            "serverReadyAction": {
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s",
                "action": "openExternally"
            }
        },
        {
            "name": "Debug Web (Edge)",
            "type": "msedge",
            "request": "launch",
            "preLaunchTask": "build-web",
            "url": "http://localhost:5214",
            "webRoot": "${workspaceFolder}/MauiTeste.Web/wwwroot",
            "serverReadyAction": {
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s",
                "action": "openExternally"
            }
        },
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-web",
            "program": "${workspaceFolder}/MauiTeste.Web/bin/Debug/net9.0/MauiTeste.Web.dll",
            "args": [],
            "cwd": "${workspaceFolder}/MauiTeste.Web",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Run MAUI Windows",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-maui-windows",
            "program": "${workspaceFolder}/MauiTeste/bin/Debug/net9.0-windows10.0.19041.0/win10-x64/MauiTeste.exe",
            "args": [],
            "cwd": "${workspaceFolder}/MauiTeste",
            "stopAtEntry": false,
            "console": "internalConsole"
        }
    ],
    "compounds": [
        {
            "name": "Run Web + MAUI",
            "configurations": [
                ".NET Core Launch (web)",
                "Run MAUI Windows"
            ],
            "stopAll": true
        }
    ]
}
